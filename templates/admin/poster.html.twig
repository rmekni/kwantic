{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
	<div class="img-list">
		{% if object.image is defined and object.image is not empty and object.image != '' %}
			{% if file_exists(object.image) %}
				<img src="{{ asset(object.image)|imagine_filter('thumb_mid') }}" class="img-responsive"/>
			{% endif %}
		{% else %}
			<img src="{{ asset('img/no_image.png')|imagine_filter('thumb_mid') }}" class="img-responsive"/>
		{% endif %}

	</div>
{% endblock %}
